<div class="text-center mb-1 mt-5">
    <img src="../public/icons/podium.png" alt="Ranking" style="width: 100px; height: auto; margin: auto;">
    <h2 class="mt-2">Ranking de Usuarios</h2>
</div>
<div class="table-responsive shadow" style="max-height: 600px; width: 800px; overflow-y: auto; margin: 20px auto 0;">
    <table class="table table-striped table-hover text-center align-middle overflow-hidden table-bordered">
        <thead class="table-secondary">
        <tr>
            <th>Ranking</th>
            <th>Usuario</th>
            <th>Puntuación máxima</th>
        </tr>
        </thead>
        <tbody>
        {{#rankings}}
            <tr>
                <td><p>{{ranking}}</p></td>
                <td><p>{{nombre_usuario}}</p></td>
                <td><p>{{resultado}}</p></td>
            </tr>
        {{/rankings}}
        </tbody>
    </table>
</div>
