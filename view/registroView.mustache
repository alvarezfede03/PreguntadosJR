<form action="/UsuarioController/registrarUsuario" method="GET" enctype="multipart/form-data">
    <label for="nombre_usuario">Nombre de usuario:</label>
    <input type="text" id="nombre_usuario" name="nombre_usuario" required><br>

    <label for="contraseña">Contraseña:</label>
    <input type="password" id="contraseña" name="contraseña" required><br>

    <label for="nombre_completo">Nombre completo:</label>
    <input type="text" id="nombre_completo" name="nombre_completo" required><br>

    <label for="anio_nacimiento">Año de nacimiento:</label>
    <input type="date" id="anio_nacimiento" name="anio_nacimiento" required><br>

    <label for="sexo">Sexo:</label>
    <input type="radio" id="sexo_m" name="sexo" value="M" required> Masculino
    <input type="radio" id="sexo_f" name="sexo" value="F" required> Femenino<br>

    <label for="pais">País:</label>
    <input type="text" id="pais" name="pais" required><br>

    <label for="ciudad">Ciudad:</label>
    <input type="text" id="ciudad" name="ciudad" required><br>

    <label for="mail">Correo electrónico:</label>
    <input type="email" id="mail" name="mail" required><br>

    <label for="foto_perfil">Foto de perfil:</label>
    <input type="file" id="foto_perfil" name="foto_perfil" accept="image/*" required><br>

    <label for="tipo_usuario">Tipo de usuario:</label>
    <select id="tipo_usuario" name="tipo_usuario">
        <option value="admin">Administrador</option>
        <option value="editor">Editor</option>
        <option value="jugador">Jugador</option>
    </select><br>
    <button type="submit">Registrar</button>
</form>
