                </div>
                <div class="d-flex align-items-center ms-auto me-1">
                    <!-- Switch modo claro y oscuro -->
                    <div class="form-check form-switch d-none d-lg-flex align-items-center justify-content-center gap-2">
                        <i class="bi bi-sun" id="sun-icon"></i>
                        <input
                                class="form-check-input theme-switch"
                                type="checkbox"
                                id="themeSwitch"
                                style="margin: 0;">
                        <i class="bi bi-moon" id="moon-icon"></i>
                    </div>
                    {{#logged_in}}
                        <a class="btn btn-secondary d-lg-none ms-2" href="/usuario/logout">
