<div class="w3-container w3-padding w3-center">
    {{#usuario}}
        <div class="w3-card w3-padding w3-margin" style="max-width: 400px; margin: auto;">
            <h1>{{nombre_completo}}</h1>
            <p><strong>Año:</strong> {{año_nacimiento}}</p>
            <p><strong>Sexo:</strong> {{sexo}}</p>
            <p><strong>País:</strong> {{pais}}</p>
            <p><strong>Ciudad:</strong> {{ciudad}}</p>
            <img src="{{foto_perfil}}" alt="Foto de perfil" class="w3-image" style="width: 100%; max-width: 200px; border-radius: 50%;">
        </div>
    {{/usuario}}
    {{^usuario}}
        <div class="w3-card w3-padding w3-margin w3-center">
            <div>ERROR: usuario no encontrado</div>
        </div>
    {{/usuario}}
</div>
