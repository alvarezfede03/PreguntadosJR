<main class="flex-grow-1 d-flex align-items-center justify-content-center">
    <div class="dashboard-container shadow p-4 bg-light rounded" style="background-image: linear-gradient({{color}}, white);">
        {{#pregunta}}
        <div class="question-container text-center">
                <div class="mb-2">
                    <img src="../public/categorias/{{categoria}}.png" alt="{{categoria}}" width="70" height="70">
                </div>
            <h2 class="mb-4">{{pregunta}}</h2>
            <form action="../partida/validarRespuesta" method="POST">
                <div class="row mb-4">
                    <div class="col-6">
                        <button type="submit" name="opcion" class="btn btn-primary w-100 mb-2" value="1" {{#respuestaDada}}disabled{{/respuestaDada}}>{{opcion_1}}</button>
                    </div>
                    <div class="col-6">
                        <button type="submit" name="opcion" class="btn btn-primary w-100 mb-2" value="2" {{#respuestaDada}}disabled{{/respuestaDada}}>{{opcion_2}}</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" name="opcion" class="btn btn-primary w-100 mb-2" value="3" {{#respuestaDada}}disabled{{/respuestaDada}}>{{opcion_3}}</button>
                    </div>
                    <div class="col-6">
                        <button type="submit" name="opcion" class="btn btn-primary w-100 mb-2" value="4" {{#respuestaDada}}disabled{{/respuestaDada}}>{{opcion_4}}</button>
                    </div>
                </div>
                <button type="submit" id="hiddenSubmit" name="opcion" value="5" style="display: none;"></button>
            </form>
            {{/pregunta}}

            {{#respuestaDada}}
                <div class="result-container mt-4">
                    {{#correcta}}
                        <div class="alert alert-success" role="alert">
                            Â¡Felicidades, acertaste!
                        </div>
                        <div class="alert alert-info" role="alert">
                            +1 Punto
                        </div>
                        <div class="mt-4">
                            <div class="row">
                                <div class="col-6 mb-2">
                                    <button type="button" class="btn btn-danger w-100" onclick="reportar()">Reportar</button>
                                </div>
                                <div class="col-6 mb-2">
                                    <button type="button" class="btn btn-success w-100" onclick="window.location.href='../partida/traerPregunta'">Siguiente pregunta</button>
                                </div>
                            </div>
                        </div>
                    {{/correcta}}
                    {{^correcta}}
                        <div class="alert alert-danger" role="alert">
                            Perdiste, intenta de nuevo
                        </div>
                        <div class="alert alert-info" role="alert">
                            Tu puntaje final es: {{puntaje}}
                        </div>
                        <div class="mt-4">
                            <div class="row">
                                <div class="col-6 mb-2">
                                    <button type="button" class="btn btn-danger w-100" onclick="reportar()">Reportar</button>
                                </div>
                                <div class="col-6 mb-2">
                                    <button type="button" class="btn btn-success w-100" onclick="window.location.href='../usuario/home'">Al home</button>
                                </div>
                            </div>
                        </div>
                    {{/correcta}}
                </div>
            {{/respuestaDada}}
        </div>
        {{^respuestaDada}}
            <div class="progress mt-3">
                <div id="progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        {{/respuestaDada}}
    </div>
</main>
<script src="../public/js/cuentaRegresiva.js"></script>